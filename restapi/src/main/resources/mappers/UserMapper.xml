<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.frankly.restapi.mapper.UserMapper">


    <resultMap type="UserDTO" id = "userResultMap">
        <id column="userID" property="userID"/>
        <result column="email" property="email"/>
        <result column="contact" property="contact"/>
        <result column="name" property="name"/>
        <result column="password" property="password"/>
        <result column="district" property="district"/>
        <result column="sex" property="sex"/>
        <result column="userAuth" property="userAuth"/>
        <result column="contact" property="contact"/>
    </resultMap>

    <select id="userList" resultMap="userResultMap">
        SELECT * FROM frankly.User
        ORDER BY userID asc
    </select>

    <select id="readUser" resultMap="userResultMap">
        SELECT * FROM frankly.User
        WHERE userID = #{userID}
    </select>

    <select id="getUserByEmail" resultMap="userResultMap">
        SELECT email, password, userAuth FROM frankly.User
        WHERE email = #{email}

    </select>

    <insert id="createUser" parameterType="UserDTO">
        INSERT INTO frankly.User(email, name, password, district, sex, userAuth, contact)
        VALUES(#{email},
               #{name},
               #{password},
               #{district},
               #{sex},
               #{userAuth},
               #{contact})
    </insert>

    <select id="loginUser" resultMap="userResultMap">
        SELECT * FROM frankly.User
        WHERE email = #{email}
    </select>

    <delete id="deleteUser" parameterType="Long">
        DELETE FROM frankly.User
        WHERE userID = #{userID}
    </delete>

    <update id="updateUser" parameterType="UserDTO">
        UPDATE frankly.User
        SET password = #{password},
            district = #{district},
            sex = #{sex},
            userAuth = #{userAuth},
            contact = #{contact}
        WHERE userID = #{userID}
    </update>
</mapper>
